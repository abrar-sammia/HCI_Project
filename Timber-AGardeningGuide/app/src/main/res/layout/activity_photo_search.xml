<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_photo_search"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sammiaabrar.timber_agardeningguide.PhotoSearch">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preview Image"
        android:textSize="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/textView1"
        />


    <ImageView
        android:src="@mipmap/ic_launcher"
        android:layout_marginTop="5dp"
        android:layout_width="350dp"
        android:layout_height="250dp"
        android:id="@+id/imageView"
        android:layout_below="@+id/textView1"

        />
    <Button
        android:text="Start Photo Search"
        android:textSize="20dp"
        android:layout_width="300dp"
        android:layout_height="35dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/start_btn"
        android:background="#9ccc65"
        android:textAllCaps="false"

        />

    <TextView
        android:text="Search Results"
        android:layout_width="400px"
        android:layout_height="45px"
        android:textSize="40px"
        android:layout_below="@+id/start_btn"
        android:layout_alignLeft="@+id/first_ImgBtn"
        android:layout_alignStart="@+id/first_ImgBtn"
        android:layout_marginTop="10dp"
        android:id="@+id/textView2"
        android:visibility="invisible"
        />

    <ImageButton
        android:layout_width="250px"
        android:layout_height="250px"
        app:srcCompat="@drawable/flower3"
        android:layout_below="@+id/textView2"
        android:layout_alignLeft="@+id/start_btn"
        android:layout_alignStart="@+id/start_btn"
        android:layout_marginTop="20dp"
        android:id="@+id/first_ImgBtn"
        android:scaleType="centerCrop"
        android:visibility="invisible"
        />

    <ImageButton
        android:layout_width="250px"
        android:layout_height="250px"
        app:srcCompat="@drawable/flower"
        android:id="@+id/second_ImgBtn"
        android:scaleType="centerCrop"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignTop="@+id/first_ImgBtn"
        android:layout_alignRight="@+id/start_btn"
        android:layout_alignEnd="@+id/start_btn"
        android:visibility="invisible"
        />


</RelativeLayout>
